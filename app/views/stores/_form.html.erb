<br />

<%= form_for(@store, :html => { :multipart => true }) do |f| %>
  <% if @store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
      <% @store.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Nombre" %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :phone1, "Telefono 1" %>
    <%= f.text_field :phone1 %>
  </div>
  <div class="field">
    <%= f.label :phone2, "Telefono 2" %>
    <%= f.text_field :phone2 %>
  </div>
  <div class="field">
    <%= f.label :web, "URL Pagina Web" %>
    <%= f.text_field :web %>
  </div>
  <div class="field">
    <%= f.label :fbook, "URL Fanpage Facebook" %>
    <%= f.text_field :fbook %>
  </div>
  <div class="field">
    <%= f.label :twitter, "Usuario Twitter" %>
    <%= f.text_field :twitter %>
  </div>
  <div class="field">
    <%= f.label :pinterest, "Usuario Pinterest" %>
    <%= f.text_field :pinterest %>
  </div>
  <div class="field">
    <%= f.label :address, "Dirección" %>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :description, "Descripción" %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :tags, "Tags" %>
    <%= f.text_field :tags %>
  </div>
  <div class="field">
    <%= f.label :mainphoto, "Imagen Principal" %>
    <%= f.file_field :mainphoto %>
  </div>
  <div class="field">
    <%= f.label :logo, "Logo" %>
    <%= f.file_field :logo %>
  </div>
  <%= f.fields_for :images do |builder| %>
    <div class="field">
      <%= builder.label :photo, "Imagen" %>
      <%= builder.file_field :photo %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Guardar" %>
  </div>
<% end %>
