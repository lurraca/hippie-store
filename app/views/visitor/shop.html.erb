<script type="text/javascript">
  $(document).ready(function() {
    $(".fancybox").fancybox();
  });
</script>
<div id="shop-wrapper">
<div id="shop-logo">
  <%= image_tag(@store.logo.url) %>
</div>
<div id="shop-tags">
  <%= @store.tags %>
</div>
<div id="shop-desc">
  <%= @store.description %>
</div>
<div id="shop-gallery">
<%= div_for(@store.images, :class=>"photo-gallery") do |image| %>
  <a class="fancybox" rel="group" href="<%= image.photo.url %>"><%= image_tag(image.photo.url, :size=>'124x135') %></a>
<% end %>
</div>
</div>
<div id="tall-ads">
  <%= image_tag('ad1.png') %>
</div>
<% content_for :title, "The Hippie Market - Store - "+ @store.name %>  
